<!-- Modal -->
<div class="modal fade" id="sg" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Occupation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form  action="/stvcpms/addnewoccupation" method ="post">
        <div class="modal-body">
      
         
          <select  class="form-control  mb-2" name= "departmentname" id= "departmentname">
              <option value="0">Select Department Name</option>
              <% if(departmentlist.length >0){ %>
                <% departmentlist.forEach(function (row){ %>
              <option value="<%= row.departmentid %>"><%= row.departmentname %></option>
              <%}) }else{}%>
                          
            </select>
           
            <input type="text" class="form-control  mb-2" name= "occupationname" id= "occupationname" placeholder="Occupation Name">
       
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" >Save changes</button>
        </div>
      </form>
     
      
    </div>
  </div>
