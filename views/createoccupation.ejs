                    <div class="card mb-4">
                      <div class="card-header pb-0">
                        <h6>Occupation List</h6>
                      </div>
                      <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                          <table class="table align-items-center mb-0">
                            <thead>
                              <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Occupation Name</th>
                         
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Department Name</th>
                               
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action To Do</th>
                                <th class="text-secondary opacity-7"></th>
                              </tr>
                            </thead>
                            <tbody>
                              <% if(occupationlist.length >0){ %>
                               <% occupationlist.forEach(function (row){ %>
                                <tr>
                                  <td>
                                    <div class="d-flex px-2 py-1">
                                    
                                      <div class="d-flex flex-column justify-content-center">
                                      
                                        <p class="text-xs text-secondary mb-0"><%= row.occupationname %></p>
                                      </div>
                                    </div>
                                  </td>
                                
                                  <td class="align-middle text-center">
                                    <span class="text-secondary text-xs font-weight-bold"><%= row.departmentname %></span>
                                  </td>
                                  <td class="align-middle text-center text-sm">
                                    <span class="badge badge-sm bg-gradient-success"><%= row.is_active %></span>
                                  </td>
                                
                                  <td class="align-middle">
                                    <form action="/stvcpms/updateoccupationname" method="post">
                                      <div class="row">
                                       <div class="col-md-6">
                                         <input type="hidden" class="form-control" name="occupationid" value="<%= row.occupationid %>" >
                                         <input type="text" class="form-control" name="occupationname" placeholder="Occupation Name" >
                                        
                                       </div>
                                       <div class="col-md-6">
                                          <button type="submit" class="btn btn-sm btn-primary btn-block">  Edit</button>
                                       </div>
                                      </div>
                                      </form>
                                  </td>
                                </tr>

                                
                             <%}) }else{}%>
                           
                            
                        
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
            
            </div>
