      </div>
      <form action="/stvcpms/addplanmajoractivity" method="post">
      
        <div class="modal-body">
           
         
         <select class="form-control" name="sdirid">
          <option value="0">Please Select Outcome Here</option>
          <% if(sdir.length>0){ %>
           <% sdir.forEach(function(row){ %>
