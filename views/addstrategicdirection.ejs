    <div class="container-fluid">
    
      <div class="col-12 mt-4">
        <div class="card mb-4">
          <div class="card-header pb-0 p-3 bg-secondary">
            <h6 class="mb-1">Outcomes</h6>
            <p class="text-sm">Existing All Outcomes </p>
          </div>
          <div class="card-body p-3">
            <div class="row">
              <div id="confirmationPopup" style="display: none; right: 5px; background-color: white; border: 1px solid black; padding: 4px;">
                <p>Are you sure you want to delete this?</p>
                <button onclick="deleteItem()" class="btn btn-sm btn-danger">Yes</button>
                <button onclick="hideConfirmation()" class="btn btn-sm btn-secondary">No</button>
            </div>
             <% if(sdir.length >0){%>
             <% sdir.forEach(function (row){ %>
              <div class="col-xl-4 col-md-6 mb-xl-0 mb-5 py-5">
                <div class="card card-blog card-plain">
                  <div class="position-relative">
                    <a class="d-block shadow-xl border-radius-xl">
                      <i class="fas fa-compass fa-3x"></i>   <p class="text-gradient text-dark mb-2 text-sm" style="text-transform: uppercase;"><%= row.sdirtitle %></p>
                 
                    </a>
                  </div>
                  <div class="card-body px-1 pb-0">
                    <% if(row) { %>
                      <div class="d-flex flex-column h-100">
                        <a href="javascript:;" style="text-decoration: none; color: #007bff;">
                          <h5>
                            <i class="fas fa-compass me-2" style="color: #007bff;"></i> <!-- Font Awesome Compass Icon -->
                            <%= row.sdircode %>
                          </h5>
                        </a>
                        <p class="mb-4 text-sm" style="color: #333;">
                          <% var string = row.sdirdescription 
                             var length = 50;
                             var trimmedString = string.substring(0, length); %>
                          <%= trimmedString %> 
                        </p>
                        <p class="mb-4 text-sm" style="color: #555; font-weight: bold;"> <%= row.sdirduration %> Days </p>
                        <p class="mb-4 text-sm" style="color: #555; font-weight: bold;">
                          <p class="mb-4 text-sm">
                            From <%= new Date(row.startdate).toLocaleDateString() %> To <%= new Date(row.enddate).toLocaleDateString() %>
                          </p>
                        </p>
                      </div>
                    <% } %>
                    
                    <div class="d-flex align-items-center justify-content-between">
                     
                      <form id="deleteForm-<%= row.sdirid %>" action="/stvcpms/deletestrategicdirection/<%= row.sdirid %>" method="post">
                      <input type="hidden" value="<%= row.sgoalid %>" name="sgoalid">
                      <button type="button" onclick="showConfirmation('<%= row.sdirid %>')" class="btn btn-outline-danger btn-sm mb-0">Delete Outcome</button>
                    
                     </form>
                     <div class="col-md-4">
                      <a data-toggle="modal" data-target="#editactivity"  onclick="setSDirectionId('<%= row.sdirid %>')"   type="button" class="btn btn-outline-success btn-sm mb-0"> 
                        Edit Outcome
                      </a>
                    </div>
                     <script>
                      var dactivity;
                      function showConfirmation(dactid) {
                        dactivity =dactid;
                          // Show confirmation popup
                          var deleteButton = document.querySelector('.btn-danger');
                          var popup = document.getElementById("confirmationPopup");
                          popup.style.display = "block";
                          popup.style.top = deleteButton.offsetTop + deleteButton.offsetHeight + "px";
                          popup.style.left = deleteButton.offsetLeft + "px";
                      }
                  
                      function deleteItem() {
                          document.getElementById("deleteForm-"+dactivity).submit();
                          hideConfirmation();
                      }
                  
                      function hideConfirmation() {
                          document.getElementById("confirmationPopup").style.display = "none";
                      }
                  </script>
                    </div>
                  </div>
                </div>
              </div>
            <% })}else{ %>
              <label>No Outcome Found</label>
             <%} %>
           
