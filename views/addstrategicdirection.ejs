<script>
  $(document).ready(function() {
    $('[name="tobeupdated"]').change(function() {
      var selectedOption = $(this).val();
      console.log(selectedOption); // Log selectedOption
      $('#modalbodyedit input, #modalbodyedit textarea').hide();
      $('#modalbodyedit [name="' + selectedOption + '"]').show();
    });

    // Hide all inputs initially
    $('#modalbodyedit input, #modalbodyedit textarea').hide();
  });
</script>
<div class="modal fade" id="ma" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
