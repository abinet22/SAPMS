      <%- include('./partials/messages') %>
      <div class="col-12 mt-4">
        <div class="card-body ">
          <% if(plan){%>
            <div class="d-flex flex-column h-100">
              <p class="mb-1 pt-2 text-bold">Plan Infos</p>
